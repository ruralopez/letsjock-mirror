                  $('#div-render2').append("<%= escape_javascript(render :partial => 'recognitions/form') %>");
              });
              $('#hito11').click(function(){
                  $('#div-render2').empty();
                  $('#div-render2').append("<%= escape_javascript(render :partial => 'works/form') %>");
              });
              $('#edu1').click(function(){
                  $('#div-render3').empty();
                  $('#div-render3').append("<%= escape_javascript(render :partial => 'educations/form') %>");
              });
              $('#edu2').click(function(){
                  $('#div-render3').empty();
                  $('#div-render3').append("<%= escape_javascript(render :partial => 'educations/form') %>");
              });
              $('#edu3').click(function(){
