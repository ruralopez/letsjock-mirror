              });
              $('#hito8').click(function(){
                  $('#div-render2').empty();
                  $('#div-render2').append("<%= escape_javascript(render :partial => 'teams/form') %>");
              });
              $('#hito9').click(function(){
                  $('#div-render2').empty();
                  $('#div-render2').append("<%= escape_javascript(render :partial => 'results/form') %>");
              });
              $('#hito10').click(function(){
