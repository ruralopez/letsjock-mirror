                  $('#div-render3').append("<%= escape_javascript(render :partial => 'educations/form', :locals => { :educationType => 3}) %>");
              });
              $('#edu4').click(function(){
                  $('#div-render3').empty();
                  $('#div-render3').append("<%= escape_javascript(render :partial => 'educations/form', :locals => { :educationType => 4}) %>");
              });

              $("#btn-add1").click(function(){
                  if(!$("#sports1").is(':hidden')){
                      $("#sports1").hide("normal");
                      $(".hito-click").hide("normal");
                      $("#div-render").hide("normal");
                      $('#div-render').empty();
                  }
                  else {$("#sports1").toggle("normal");
                  }
              });
              $("#btn-add2").click(function(){
                  if(!$("#sports2").is(':hidden')){
                      $("#sports2").hide("normal");
                      $(".hito-click2").hide("normal");
                      $("#div-render2").hide("normal");
                      $('#div-render2').empty();
                  }
                  else {$("#sports2").toggle("normal");
                  }
              });
              $("#btn-add3").click(function(){
                  if($("#edu1").is(':hidden') || $("#edu2").is(':hidden') || $("#edu3").is(':hidden')){
                      $(".btn-edu").show("fast");
                  }
                  else {$(".btn-edu").toggle("fast");
                  }
              });

              $(".btn-edu").click(function(){
                  $idx = $(this).attr('id');
                  $(".btn-edu").each(function () {
                      if ( $(this).attr('id') != $idx  ) {
                          $(this).toggle("normal");}
                  });
                  $("#div-render3").toggle("normal");
